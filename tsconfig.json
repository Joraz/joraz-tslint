{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "outDir": "dist",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
          "es5",
          "es6"
        ]
    },
    "exclude": [
        "dist/**",
        "node_modules/**"
    ],
    "include": [
        "src/**/*.ts"
    ]
}